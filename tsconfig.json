{
  "compilerOptions": {
    "target": "ES2020", // ðŸ”¥ better for modern Next.js
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // ðŸ”¥ optional; set to true if you use .js files
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // âœ” correct for Next.js 14â€“16
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"] // âœ” allows root imports
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
